generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // خط url را پاک کنید (چون رفت توی فایل کانفیگ)
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  content     String
  imageUrl    String?
  tags        String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}